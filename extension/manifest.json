{
    "name": "Tell-Tale Tab",
    "version": "2.0.0",
    "description": "Notifies you of new content in popular web apps with the tab's favicon.",
    "icons": {
       "128": "icon_128.png",
       "48": "icon_48.png"
    },
    "options_page": "options.html",
    "background_page": "background.html",
    "content_scripts": [ {
        "js": [ "tellTaleTab.js" ],
        "matches": [
            "https://mail.google.com/mail/*",
            "https://mail.google.com/a/*",
            "http://www.google.com/reader/*",
            "https://wave.google.com/wave/*",
            "http://www.netvibes.com/",
            "http://www.facebook.com/*",
            "http://twitter.com/*",
            "https://*/index.php*",
            "http://*/index.php*"
        ]
    } ]
}
